{
  "name": "knowledge-graph",
  "version": "0.0.0",
  "repository": {
    "type": "git",
    "url": "git://github.com/knowledge-graph/knowledge-graph.git"
  },

  "devDependencies": {
    "browserify": "",
    "watchify": "~0.6",
    "beefy": "",
    "less": "",
    "catw": "",
    "jshint": "",
    "karma": "~0.10"
  },

  "dependencies": {
    "d3": "~3.3.8",
    "dagre-d3": "git://github.com/knowledge-graph/dagre-d3.git#master"
  },

  "scripts": {
    "git-setup": "tools/gitsetup",
    "build-js": "node tools/build.js",
    "watch-css": "catw -c 'lessc -' 'src/css/*.less' -o dist/css/knowledge-graph.css",
    "build": "npm run build-js & npm run build-css",
    "watch-js": "watchify src/knowledge-graph.js -d -o dist/knowledge-graph.js",
    "watch-css": "catw -c 'lessc -' 'src/css/*.less' -o dist/css/knowledge-graph.css -v",
    "watch": "npm run watch-css & npm run watch-js",
    "start": "npm run watch-css & beefy --live src/knowledge-graph.js:dist/knowledge-graph.js",
    "test": "npm run build-js & jshint src/knowledge-graph.js & karma start tests/karma.conf.js --single-run",
    "test-watch": "npm run watch & karma start tests/karma.conf.js --auto-watch"
  },

  "jshintConfig": {
    "globals": {
      "require": false,
      "global": false,
      "module": false
    }
  }
}
